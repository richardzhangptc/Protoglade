generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String
  name              String?
  emailUnsubscribed Boolean  @default(false)
  createdAt         DateTime @default(now())

  workspaces      WorkspaceMember[]
  assignedTasks   Task[]
  comments        Comment[]
  sentInvitations WorkspaceInvitation[]
  taskAssignments TaskAssignment[]
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  position  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  members     WorkspaceMember[]
  projects    Project[]
  invitations WorkspaceInvitation[]
}

model WorkspaceMember {
  id          String   @id @default(uuid())
  role        String   @default("member")  // "owner", "admin", "member"
  joinedAt    DateTime @default(now())
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([userId, workspaceId])
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  type        String   @default("kanban")  // "kanban" or "whiteboard"
  position    Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  tasks        Task[]
  columns      KanbanColumn[]
  strokes      WhiteboardStroke[]
  shapes       WhiteboardShape[]
  texts        WhiteboardText[]
  stickyNotes  WhiteboardStickyNote[]
}

model KanbanColumn {
  id        String   @id @default(uuid())
  name      String
  position  Int      @default(0)
  color     String   @default("#6366f1") // Indigo color
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  tasks     Task[]
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  status      String    @default("todo")    // Legacy field, kept for compatibility
  priority    String    @default("medium")  // "low", "medium", "high", "urgent"
  dueDate     DateTime?
  position    Float     @default(0)         // For ordering tasks (using float for easier reordering)
  labels      String[]  @default([])        // Color labels (hex colors like "#ef4444")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  columnId    String?
  column      KanbanColumn? @relation(fields: [columnId], references: [id], onDelete: SetNull)
  
  assigneeId  String?
  assignee    User?     @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  
  comments    Comment[]
  assignments TaskAssignment[]
}

model TaskAssignment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([taskId, userId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model WorkspaceInvitation {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  role      String   @default("member")  // "admin", "member"
  status    String   @default("pending") // "pending", "accepted", "expired"
  expiresAt DateTime
  createdAt DateTime @default(now())

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  invitedById String
  invitedBy   User      @relation(fields: [invitedById], references: [id], onDelete: Cascade)

  @@unique([email, workspaceId])  // Only one pending invite per email per workspace
}

model WhiteboardStroke {
  id        String   @id @default(uuid())
  points    Json     // Array of {x, y} points
  color     String   @default("#000000")
  size      Float    @default(2)
  createdAt DateTime @default(now())
  createdBy String   // User ID who created the stroke

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model WhiteboardShape {
  id          String   @id @default(uuid())
  type        String   // "rectangle", "circle", "line"
  x           Float
  y           Float
  width       Float
  height      Float
  color       String   @default("#000000")
  strokeWidth Float    @default(2)
  filled      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String   // User ID who created the shape

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model WhiteboardText {
  id         String   @id @default(uuid())
  x          Float
  y          Float
  width      Float    @default(200)
  height     Float    @default(32)
  content    String   @default("")
  fontSize   Int      @default(16)
  fontWeight String   @default("normal") // "normal" | "bold"
  color      String   @default("#000000")
  align      String   @default("left")   // "left" | "center" | "right"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String   // User ID who created the text

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model WhiteboardStickyNote {
  id        String   @id @default(uuid())
  x         Float
  y         Float
  width     Float    @default(200)
  height    Float    @default(200)
  content   String   @default("")
  color     String   @default("#fef08a") // Default yellow
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String   // User ID who created the sticky note

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}
